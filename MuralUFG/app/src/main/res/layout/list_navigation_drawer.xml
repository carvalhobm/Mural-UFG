<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    tools:context="br.com.doggerz.doggerz.NavigationDrawerButtons.About">

    <ImageView
        android:id="@+id/ListIMGView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/contentDescriptionListIcon"
        android:paddingEnd="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingStart="5dp" />

    <TextView
        android:id="@+id/ListTXTView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ListIMGView"
        android:layout_toRightOf="@+id/ListIMGView"
        android:textAppearance="?android:attr/textAppearanceListItem" />

</RelativeLayout>
